<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao71" />
    
        <CheckBox android:id="@+id/checkbox_questao71A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao71B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao71C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao71D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao71E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao71F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao71F"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao71"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>