<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao34" />
    
        <CheckBox android:id="@+id/checkbox_questao34A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao34A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao34B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao34B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao34C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao34C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao34D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao34D"
        />
       
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao34"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>