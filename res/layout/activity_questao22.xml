<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao22" />
    
        <CheckBox android:id="@+id/checkbox_questao22A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao22A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao22B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao22B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao22C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao22C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao22D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao22D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao22E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao22E"
        />
    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao22"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>