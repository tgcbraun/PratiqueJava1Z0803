<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
   <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao53" />
    
        <CheckBox android:id="@+id/checkbox_questao53A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao53B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao53C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao53D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao53E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao53F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53F"
        />
    
    <CheckBox android:id="@+id/checkbox_questao53G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao53G"
        />
    

    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao53"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>