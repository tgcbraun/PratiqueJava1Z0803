<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao98" />
    
        <CheckBox android:id="@+id/checkbox_questao98A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao98A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao98B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao98B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao98C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao98C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao98D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao98D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao98E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao98E"
        />


    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao98"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>