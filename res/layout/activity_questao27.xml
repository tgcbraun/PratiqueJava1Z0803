<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao27" />
    
        <CheckBox android:id="@+id/checkbox_questao27A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao27A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao27B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao27B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao27C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao27C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao27D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao27D"
        />
    
       <CheckBox android:id="@+id/checkbox_questao27E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao27E"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao27"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>