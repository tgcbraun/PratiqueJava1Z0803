<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao61" />
    
        <CheckBox android:id="@+id/checkbox_questao61A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao61A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao61B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao61B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao61C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao61C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao61D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao61D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao61E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao61E"
        />
    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao61"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>