<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
   <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao51" />
    
        <CheckBox android:id="@+id/checkbox_questao51A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao51A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao51B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao51B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao51C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao51C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao51D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao51D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao51E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao51E"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao51"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>