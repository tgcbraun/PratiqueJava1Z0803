<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao15"
        />
    
        <CheckBox android:id="@+id/checkbox_questao15A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao15A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao15B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao15B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao15C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao15C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao15D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao15D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao15E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao15E"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao15"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>