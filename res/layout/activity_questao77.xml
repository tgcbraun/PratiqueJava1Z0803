<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao77" />
    
        <CheckBox android:id="@+id/checkbox_questao77A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao77A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao77B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao77B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao77C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao77C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao77D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao77D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao77E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao77E"
        />

    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao77"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>