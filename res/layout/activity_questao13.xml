<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao13"
        />
    
        <CheckBox android:id="@+id/checkbox_questao13A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao13A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao13B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao13B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao13C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao13C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao13D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao13D"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao13"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>