<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao62" />
    
        <CheckBox android:id="@+id/checkbox_questao62A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao62B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao62C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao62D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao62E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao62F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao62F"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao62"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>