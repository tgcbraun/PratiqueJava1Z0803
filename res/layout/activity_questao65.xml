<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao65" />
    
        <CheckBox android:id="@+id/checkbox_questao65A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao65B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao65C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao65D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao65E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao65F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65F"
        />
    
    <CheckBox android:id="@+id/checkbox_questao65G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao65G"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao65"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>