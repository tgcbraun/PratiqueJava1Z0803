<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao44" />
    
        <CheckBox android:id="@+id/checkbox_questao44A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao44B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao44C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao44D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao44E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44E"
        />
    
     <CheckBox android:id="@+id/checkbox_questao44F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44F"
        />
        
     <CheckBox android:id="@+id/checkbox_questao44G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao44G"
        />
        
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao44"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>