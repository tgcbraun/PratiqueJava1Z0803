<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
 <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao83" />
    
        <CheckBox android:id="@+id/checkbox_questao83A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao83B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao83C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao83D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83D"
        />

    <CheckBox android:id="@+id/checkbox_questao83E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83E"
        />
    
      <CheckBox android:id="@+id/checkbox_questao83F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83F"
        />
      
        <CheckBox android:id="@+id/checkbox_questao83G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao83G"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
  
    <TextView
        android:id="@+id/RespostaQuestao83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao83"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>