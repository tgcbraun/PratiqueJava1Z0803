<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao21" />
    
        <CheckBox android:id="@+id/checkbox_questao21A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao21A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao21B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao21B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao21C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao21C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao21D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao21D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao21E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao21E"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao21"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>