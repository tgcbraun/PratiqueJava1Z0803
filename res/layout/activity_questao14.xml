<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao14"
        />
    
        <CheckBox android:id="@+id/checkbox_questao14A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao14A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao14B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao14B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao14C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao14C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao14D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao14D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao14E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao14E"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao14"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>