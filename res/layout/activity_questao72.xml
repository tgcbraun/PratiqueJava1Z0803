<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao72" />
    
        <CheckBox android:id="@+id/checkbox_questao72A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao72A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao72B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao72B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao72C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao72C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao72D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao72D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao72E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao72E"
        />

    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao72"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>