<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao37" />
    
        <CheckBox android:id="@+id/checkbox_questao37A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao37A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao37B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao37B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao37C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao37C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao37D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao37D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao37E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao37E"
        />
       
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao37"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>