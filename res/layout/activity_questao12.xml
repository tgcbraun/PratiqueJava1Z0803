<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
<LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao12"
        />
    
        <CheckBox android:id="@+id/checkbox_questao12A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao12B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao12C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao12D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao12E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao12F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12F"
        />
    
    <CheckBox android:id="@+id/checkbox_questao12G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao12G"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao12"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>