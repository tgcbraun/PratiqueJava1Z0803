<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao70" />
    
        <CheckBox android:id="@+id/checkbox_questao70A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao70B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao70C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao70D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao70E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70E"
        />
    
    <CheckBox android:id="@+id/checkbox_questao70F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao70F"
        />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao70"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>