<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
 <LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao84" />
    
        <CheckBox android:id="@+id/checkbox_questao84A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao84B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao84C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao84D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84D"
        />

    <CheckBox android:id="@+id/checkbox_questao84E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84E"
        />
    
      <CheckBox android:id="@+id/checkbox_questao84F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao84F"
        />
      
    
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
  
    <TextView
        android:id="@+id/RespostaQuestao84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao84"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>