<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"><LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Questao46" />
    
        <CheckBox android:id="@+id/checkbox_questao46A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao46B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao46C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao46D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao46E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46E"
        />
    
     <CheckBox android:id="@+id/checkbox_questao46F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao46F"
        />
        

        
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao46"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>