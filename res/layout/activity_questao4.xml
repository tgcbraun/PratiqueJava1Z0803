<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
<LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao4"
        />
    
        <CheckBox android:id="@+id/checkbox_questao4A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao4A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao4B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao4B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao4C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao4C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao4D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao4D"
        />
    

   
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao4"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>