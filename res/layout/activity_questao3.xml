<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

<LinearLayout  android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Questao3"
        />
    
        <CheckBox android:id="@+id/checkbox_questao3A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao3A"
        />
    
    <CheckBox android:id="@+id/checkbox_questao3B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao3B"
        />
   
    <CheckBox android:id="@+id/checkbox_questao3C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao3C"
        />
   
    <CheckBox android:id="@+id/checkbox_questao3D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao3D"
        />
    
    <CheckBox android:id="@+id/checkbox_questao3E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questao3E"
        />
   
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/botaoQuestao"
        android:onClick="abrirResposta"/>
    
    <TextView
        android:id="@+id/RespostaQuestao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RespostaQuestao3"
        android:visibility="invisible"
        />

</LinearLayout>
</ScrollView>